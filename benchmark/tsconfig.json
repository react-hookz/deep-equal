{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@react-hookz/deep-equal-local/*": [
				"../../*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	],
	"ts-node": {
		"esm": true,
		"swc": true
	}
}
